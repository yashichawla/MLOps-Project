# .airflow.env

# where Airflow keeps its metadata (keep this on Linux side, not /mnt/c)
export AIRFLOW_HOME="$HOME/airflow_local"

# point Airflow at your repo DAGs
export AIRFLOW__CORE__DAGS_FOLDER="$(pwd)/dags"

# keep junk out of the UI
export AIRFLOW__CORE__LOAD_EXAMPLES="False"

# put all Airflow logs under a single folder in the repo
export AIRFLOW__LOGGING__BASE_LOG_FOLDER="$(pwd)/airflow_artifacts/logs"
export AIRFLOW__SCHEDULER__child_process_log_directory="$(pwd)/airflow_artifacts/scheduler"

# OPTIONAL: if you didnâ€™t run `pip install -e .`, uncomment this so imports like `from scripts...` work
# export PYTHONPATH="$(pwd):${PYTHONPATH}"
